{
  "name": "Live Event Playground",
  "description": "Manual trigger feeding the Live Event Heartbeat component so we can observe five minutes of live trace streaming.",
  "nodes": [
    {
      "id": "manual-trigger",
      "type": "core.trigger.manual",
      "position": { "x": 0, "y": 0 },
      "data": {
        "label": "Manual Trigger",
        "config": {
          "runtimeInputs": [
            { "id": "label", "label": "Stream Label", "type": "text", "required": true, "defaultValue": "Live Run Diagnostics" },
            { "id": "durationSeconds", "label": "Duration (seconds)", "type": "number", "required": false, "defaultValue": 60 },
            { "id": "intervalSeconds", "label": "Interval (seconds)", "type": "number", "required": false, "defaultValue": 2 },
            { "id": "notes", "label": "Annotations", "type": "text", "required": false }
          ]
        }
      }
    },
    {
      "id": "live-heartbeat",
      "type": "test.live.event.heartbeat",
      "position": { "x": 360, "y": 40 },
      "data": {
        "label": "Live Event Heartbeat",
        "config": {
          "label": "Live Run Diagnostics",
          "durationSeconds": 60,
          "intervalSeconds": 2,
          "annotations": {
            "source": "Live Event Playground",
            "notes": "{{inputs.notes}}"
          }
        }
      }
    },
    {
      "id": "console-log",
      "type": "core.console.log",
      "position": { "x": 720, "y": 40 },
      "data": {
        "label": "Heartbeat Summary",
        "config": {
          "label": "Live Event Summary",
          "data": "{{live-heartbeat.summary}}",
          "level": "info"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "trigger-to-heartbeat-label",
      "source": "manual-trigger",
      "target": "live-heartbeat",
      "sourceHandle": "label",
      "targetHandle": "label"
    },
    {
      "id": "trigger-to-heartbeat-duration",
      "source": "manual-trigger",
      "target": "live-heartbeat",
      "sourceHandle": "durationSeconds",
      "targetHandle": "durationSeconds"
    },
    {
      "id": "trigger-to-heartbeat-interval",
      "source": "manual-trigger",
      "target": "live-heartbeat",
      "sourceHandle": "intervalSeconds",
      "targetHandle": "intervalSeconds"
    },
    {
      "id": "heartbeat-to-console",
      "source": "live-heartbeat",
      "target": "console-log",
      "sourceHandle": "summary",
      "targetHandle": "data"
    }
  ],
  "viewport": { "x": 0, "y": 0, "zoom": 1 }
}
