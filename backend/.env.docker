# ShipSec backend environment for Docker containers

# Primary Postgres database connection (Docker network)
DATABASE_URL="postgresql://shipsec:shipsec@postgres:5432/shipsec"

# HTTP server configuration
PORT="3211"

# Temporal connection details (Docker network)
TEMPORAL_ADDRESS="temporal:7233"
TEMPORAL_NAMESPACE="shipsec-prod"
TEMPORAL_TASK_QUEUE="shipsec-prod"
# Automatically create and run a demo workflow on startup
TEMPORAL_BOOTSTRAP_DEMO="false"

# MinIO credentials for artifact storage (Docker network)
MINIO_ROOT_USER="minioadmin"
MINIO_ROOT_PASSWORD="minioadmin"
MINIO_ENDPOINT="172.19.0.2"
MINIO_PORT="9000"

# Loki configuration for log retrieval (Docker network)
LOKI_URL="http://loki:3100"
# Optional: multi-tenant org / basic auth credentials
LOKI_TENANT_ID=""
LOKI_USERNAME=""
LOKI_PASSWORD=""